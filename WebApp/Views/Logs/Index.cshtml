@model List<WebApp.ViewModels.LogEntryVm>
@{
    ViewData["Title"] = "System Logs";
    Layout = "_Layout";
}

<h2 class="mb-4">System Logs</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No logs found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Time</th>
                    <th scope="col">Level</th>
                    <th scope="col">Message</th>
                    <th scope="col">Source</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Timestamp.ToString("g")</td>
                        <td>
                            <span class="badge
                                @(log.Level == "Error" ? "bg-danger" :
                                  log.Level == "Warning" ? "bg-warning text-dark" :
                                  "bg-secondary")">
                                @log.Level
                            </span>
                        </td>
                        <td>@log.Message</td>
                        <td class="text-muted">@log.Source</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
