@model List<WebApp.Models.CulturalHeritageListViewModel>
@{
    ViewData["Title"] = "Cultural Heritage";
}

<!-- Custom styling for spacing and font sizes -->
<style>
    h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .heritage-table-wrapper {
        margin-top: 2rem;
    }

    .heritage-table {
        font-size: 1.05rem;
    }

        .heritage-table th {
            font-size: 1.1rem;
            padding: 1rem 0.75rem;
            border-bottom: 2px solid #dee2e6;
        }

        .heritage-table td {
            padding: 0.85rem 0.75rem;
            vertical-align: middle;
        }

    .btn-sm {
        padding: 0.5rem 0.75rem;
        font-size: 0.9rem;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div class="card shadow-sm heritage-table-wrapper">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table heritage-table table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Minority</th>
                        <th>Themes</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.MinorityName</td>
                            <td>@string.Join(", ", item.Topics)</td>
                            <td class="text-end">
                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-info me-1">
                                    View
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-primary me-1">
                                        Edit
                                    </a>
                                    <form asp-action="Delete"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                onclick="return confirm('Delete this item?');">
                                            Delete
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-secondary">
                                        Comment
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
