@model WebApp.Models.CulturalHeritageDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<img src="@Model.ImageUrl" class="img-fluid mb-3" />

<dl class="row">
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Minority</dt>
    <dd class="col-sm-10">@Model.MinorityName</dd>

    <dt class="col-sm-2">Themes</dt>
    <dd class="col-sm-10">@string.Join(", ", Model.Topics)</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
