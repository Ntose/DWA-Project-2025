@* File: Views/Account/ChangePassword.cshtml *@
@model WebApp.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="card mx-auto mt-5" style="max-width:450px;">
    <div class="card-header"><h4>@ViewData["Title"]</h4></div>
    <div class="card-body">
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label"></label>
                <input asp-for="OldPassword" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Update Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
