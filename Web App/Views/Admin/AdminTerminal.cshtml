@model WebApp.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Terminal";
}

<h2>@ViewData["Title"]</h2>

<p class="mb-4">
    <a asp-controller="CulturalHeritage"
       asp-action="Create"
       class="btn btn-success me-2">
        + New Cultural Heritage
    </a>
    <a asp-action="CreateNationalMinority"
       class="btn btn-primary me-2">
        + New National Minority
    </a>
    <a asp-action="CreateTopic"
       class="btn btn-primary">
        + New Theme
    </a>
</p>

<ul class="nav nav-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active"
                id="users-tab"
                data-bs-toggle="tab"
                data-bs-target="#tab-users"
                type="button"
                role="tab"
                aria-controls="tab-users"
                aria-selected="true">
            Users
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="logs-tab"
                data-bs-toggle="tab"
                data-bs-target="#tab-logs"
                type="button"
                role="tab"
                aria-controls="tab-logs"
                aria-selected="false">
            Logs
        </button>
    </li>
</ul>

<div class="tab-content mt-3" id="adminTabsContent">
    <div class="tab-pane fade show active"
         id="tab-users"
         role="tabpanel"
         aria-labelledby="users-tab">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Registered</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.Username</td>
                        <td>@u.Email</td>
                        <td>@u.Role</td>
                        <td>@u.DateRegistered.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane fade"
         id="tab-logs"
         role="tabpanel"
         aria-labelledby="logs-tab">
        <p>
            Total log entries:
            <strong>@Model.LogCount</strong>
        </p>
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>Level</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model.Logs)
                {
                    <tr>
                        <td>@l.Timestamp.ToString("g")</td>
                        <td>@l.Level</td>
                        <td>@l.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>
}